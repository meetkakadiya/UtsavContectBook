<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDEF"
    tools:context=".JaminSampadan">

    <TextView
        android:id="@+id/main_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="જમીન સંપાદન"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>

    <ScrollView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <!--Name 1-->
            <TextView
                android:id="@+id/text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="પૂ.ગોવિંદ સ્વામી - મેતપુરવાળા"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/text_1_1"
                android:layout_below="@+id/text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MO:. 9898884558"
                android:textSize="20dp" />

            <Button
                android:id="@+id/bt_1"
                android:layout_marginTop="2dp"
                android:layout_width="25pt"
                android:layout_height="25pt"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/icon"
                />
            <View
                android:id="@+id/view1"
                android:layout_below="@+id/text_1_1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="5dp"
                android:background="#ac662a"/>

            <!--End Name 1-->


            <TextView
                android:id="@+id/text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:text="શ્રી બાબુભાઈ અંબાલાલ પટેલ"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/text_2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_2"
                android:text="MO:.  "
                android:textSize="20dp" />

            <Button
                android:id="@+id/bt_2"
                android:layout_marginTop="2dp"
                android:layout_width="25pt"
                android:layout_height="25pt"
                android:layout_below="@id/view1"
                android:layout_alignParentRight="true"
                android:background="@drawable/icon"
                android:layout_marginRight="5dp"
                />

            <View
                android:id="@+id/view2"
                android:layout_below="@+id/text_2_1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="5dp"
                android:background="#ac662a"/>

            <!--  -->

            <TextView
                android:id="@+id/text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view2"
                android:text="	શ્રી મહેન્દ્રભાઈ પટેલ - વડતાલ	"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/text_3_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_3"
                android:text="MO:. 9825083544"
                android:textSize="20dp" />
            <Button
                android:id="@+id/bt_3"
                android:layout_marginTop="4dp"
                android:layout_width="25pt"
                android:layout_height="25pt"
                android:layout_below="@id/view2"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/icon"
                />

            <View
                android:id="@+id/view3"
                android:layout_below="@+id/text_3_1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="5dp"
                android:background="#ac662a"/>


            <!--  -->

            <TextView
                android:id="@+id/text_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view3"
                android:text="શ્રી સતિષભાઈ-વડતાલ"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/text_4_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_4"
                android:text="MO:. 9687893339"
                android:textSize="20dp" />
            <Button
                android:id="@+id/bt_4"
                android:layout_marginTop="4dp"
                android:layout_width="25pt"
                android:layout_height="25pt"
                android:layout_below="@id/view3"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/icon"
                />

            <View
                android:id="@+id/view4"
                android:layout_below="@+id/text_4_1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="5dp"
                android:background="#ac662a"/>

            <!--  -->

            <TextView
                android:id="@+id/text_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view4"
                android:text="શ્રી રાકેશભાઈ-વડતાલ"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/text_5_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_5"
                android:text="MO:. 9825355449"
                android:textSize="20dp" />
            <Button
                android:id="@+id/bt_5"
                android:layout_marginTop="4dp"
                android:layout_width="25pt"
                android:layout_height="25pt"
                android:layout_below="@id/view4"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/icon"
                />

            <View
                android:id="@+id/view5"
                android:layout_below="@+id/text_5_1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="5dp"
                android:background="#ac662a"/>



        </RelativeLayout>


    </ScrollView>


</RelativeLayout>